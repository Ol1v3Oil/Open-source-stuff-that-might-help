'l,r = w'
'o = u'
StartE = 0
def translate(E):
    for letter in E:
        if letter in "rlo":
            E = E.replace("r" ,"w")
            E = E.replace("l", "w")
            E = E.replace("oo", "owo")
            E = E.replace("o", "wo")
            E = E.replace("ww","w")

    return E

StartE = 1
while StartE == 1:
    Sentence = input("type something: ")
    Sentence = translate(Sentence)
    print(Sentence)

#Results:
#Never gonna give you up
